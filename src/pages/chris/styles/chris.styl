body
  width: 100%;
  height: 100%;
  background-color: #f7fbfc
  overflow: hidden
  position relative
  background: url('~assets/bg.jpg') no-repeat center;
  background-size: 100% auto;
  counter-reset: prz;
  >a
    display: none

button.btn-blue
  background-color: #42beec
  color: #fff
  border: 1px solid #42beec
  outline: none
  // &:hover
  //   background-color: #fff
  //   color: #42beec
  &.active
    background-color: #fff
    color: #42beec

@keyframes wave {
  from {
    transform: translate3d(0, -10px, 0);
  }
  to {
    transform: translate3d(0, 10px, 0);
  }
}

@keyframes fade {
  from {
    opacity: 1
  }
  to {
    opacity: 0
  }
}

@keyframes rotate {
  from {
    transform: rotate(0)
  }
  to {
    transform: rotate(-360deg)
  }
}

.index {
  width: 100%;
  height: 100%;
  overflow: hidden
  position relative
}

.alertbg {
  position: absolute
  top: 20px
  left: 0
  right: 0
  z-index: -1
  img {
    width: 100%
    animation: rotate 15s linear infinite
  }
}


.present {
  display: none;
  width: 80px;
  height: 80px;
  // padding: 10px;
  background: url('~assets/p1.png') no-repeat center;
  background-size: 65px;
  position: absolute;
  top: 0;
  &.click {
    background: none;
    pointer-events: none;
    &:after {
      content: '+1';
      color: #ffff01;
      font-size: 30px;
      font-weight: bold;
      transform: none;
      display: block;
      width: 100%;
      height: 100%;
      text-align: center;
      animation: fade .9s ease;
      opacity: 0;
    }
  }
}
.click {
  counter-increment: prz;
}

